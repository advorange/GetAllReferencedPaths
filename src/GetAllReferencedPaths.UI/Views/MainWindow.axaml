<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GetAllReferencedPaths.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GetAllReferencedPaths.UI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="GetAllReferencedPaths.UI">

	<Design.DataContext>
		<vm:MainWindowViewModel />
	</Design.DataContext>

	<Border Padding="15">
		<Grid ColumnDefinitions="5*,5*">
			<UniformGrid Grid.Column="0">
				<HeaderedContentControl Header="Base Directory">
					<TextBox Text="{Binding Args.BaseDirectory}" TextWrapping="NoWrap" />
				</HeaderedContentControl>
				<HeaderedContentControl Header="Output Directory">
					<TextBox Text="{Binding Args.OutputDirectory}" TextWrapping="NoWrap" />
				</HeaderedContentControl>
				<HeaderedContentControl Header="Root Directories">
					<ListBox Items="{Binding Strings}" />
				</HeaderedContentControl>
				<Button Content="Button" Command="{Binding GetPaths}" />
			</UniformGrid>
		</Grid>
	</Border>
</Window>